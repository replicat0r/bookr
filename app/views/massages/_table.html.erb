  <h2 class="current_date">Customer Data for: <%= @today unless @today.blank? %></h2>

  <%= link_to("Add New", new_massage_path(:date => "#{@today}") ,remote:true ,class: "add_btn btn btn-success") %>

  <table class="table table-bordered">
    <thead>
      <tr> 
  <th> #</th>
      <th>Receipt Number</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>PayType</th>
      <th>Pay Tax </th>
      <th>Payment Total</th>
      <th>Deposit Date </th>
    </tr>
  </thead>
  <tbody>
    <% @massages.each_with_index do |m,i| %>
    <tr>
    <td><%= i +1 %></td>
      <td><%= best_in_place m, :receipt_num,:place_holder=> "-----------" %></td>
      <td><%=  best_in_place m,:fname,:place_holder=> "-----------" %></td>
      <td><%= best_in_place m,:lname,:place_holder=> "-----------" %></td>
      <td><%= best_in_place m,:cardtype ,:as => :select, :collection => %w(Mastercard Visa Debit Cash Cheque),:place_holder=> "-----------" %></td>
      <td><%= best_in_place m,:tax,:place_holder=> "-----------" %></td>
      <td><%= best_in_place m,:amount,:place_holder=> "-----------" %></td>
      <td><%= best_in_place m,:deposit_date ,:as => :date,:place_holder=> "-----------" %></td>
      
    </tr>
    <% end %>
  </tbody>
  </table>