<%= form_for @massage,remote:true, html: {  class: " newcustomer "} do |f| %>
<div class=" form-group">
	<div class="col-sm-6">
		<label>Service Date</label>
		<%= f.text_field :service_date ,:value => "#{@date}",class: "form-control" %>
	</div>
	<div class="col-sm-6">
		<label>Reciept Number</label>
	<%= f.text_field :receipt_num ,class: "form-control" %></div>
</div>
<div class=" form-group">
	<div class="col-sm-6">
		<label>First Name</label>
		<%= f.text_field :fname ,class: "form-control" %>
	</div>
	<div class="col-sm-6">
		<label>Last Name</label>
		<%= f.text_field :lname ,class: "form-control" %>
	</div>
</div>
<div class=" form-group">

	<div class="col-sm-6">

		<%= f.label :cardtype, 'Select Payment Methods' ,class: "m-l-5" %>

<%= f.select :cardtype, [['Mastercard','1'], ['Visa','2'],['Debit','3'],['Cash','4'],['Cheque','5']],{},class:'form-control'  %>
		<%# f.label :cardtype, 'Mastercard' ,class: "m-l-5" %>
		<%# f.radio_button :cardtype, 'Mastercard' , :class => '' %>
		<%# f.label :cardtype, 'Visa' ,class: "m-l-5" %>
		<%# f.radio_button :cardtype, 'Visa' , :class => '' %>
		<%# f.label :cardtype, 'Debit' ,class: "m-l-5" %>
		<%# f.radio_button :cardtype, 'Debit' , :class => '' %>
		<%# f.label :cardtype, 'Cash' ,class: "m-l-5" %>
		<%# f.radio_button :cardtype, 'Cash' , :class => '' %>
	</div>
	<div class="col-sm-6">
		<%= f.label :amount, 'Amount' ,class: "m-l-5" %>
		<%= f.text_field :amount ,class: "form-control" %>
	</div>
</div>

<div class="col-sm-12">
	<%= f.label :deposit_date, 'Deposit Date' ,class: "m-l-5" %>
	<%= f.datepicker "deposit_date",:dateFormat => "yy-mm-dd",class: "form-control" %>
</div>

<div class="clear">
	<button type="button" class="btn btn-default m-20" data-dismiss="modal">Cancel</button>
	<%= f.submit "Submit" ,class:"btn btn-success pad-20 pull-right" %>
</div>

<% end %>
