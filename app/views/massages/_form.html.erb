<%= form_for @massage ,class: " form " do |f| %>

<div class="col-sm-12">
<label>Reciept Number</label>
		<%= f.text_field :receipt_num ,class: "form-control" %></div>

<div class="col-sm-12">


	<div class="col-sm-6">
		<label>First Name</label>
		<%= f.text_field :fname ,class: "form-control" %>
	</div>
	<div class="col-sm-6">
		<label>Last Name</label>
		<%= f.text_field :lname ,class: "form-control" %>
	</div>
</div>
<div class="col-sm-12">
<div class="col-sm-7">
	<%= f.label :cardtype, 'Mastercard' ,class: "m-l-5" %>
	<%= f.radio_button :cardtype, 'Mastercard' , :class => '' %>
	<%= f.label :cardtype, 'Visa' ,class: "m-l-5" %>
	<%= f.radio_button :cardtype, 'Visa' , :class => '' %>
	<%= f.label :cardtype, 'Debit' ,class: "m-l-5" %>
	<%= f.radio_button :cardtype, 'Debit' , :class => '' %>
	<%= f.label :cardtype, 'Cash' ,class: "m-l-5" %>
	<%= f.radio_button :cardtype, 'Cash' , :class => '' %>
</div>
	<div class="col-sm-5">
	<%= f.label :amount, 'Amount' ,class: "m-l-5" %>
	<%= f.text_field :amount ,class: "form-control" %>
	</div>
</div>
<div class="col-sm-12">

	<%= f.label :depost_date, 'Deposit Date' ,class: "m-l-5" %>
	<%= f.datepicker "depost_date",:dateFormat => "yy-mm-dd",class: "form-control" %>

</div>
<div class="modal-footer">
	<%= f.submit "Done" ,class:"btn btn-info" %>
</div>
<% end %>